<Window x:Class="ML_DecisionTreeClassifier.SelectType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ML_DecisionTreeClassifier"
        mc:Ignorable="d"
        Title="SelectType" Height="150" Width="250">
    <Grid>
        <Label Content="Please select the format of this file" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" Height="27" Width="190"/>
        <Button x:Name="TextButton" Content=".txt" HorizontalAlignment="Left" Margin="30,62,0,0" VerticalAlignment="Top" Height="34" Width="72" Click="TextButton_Click"/>
        <Button x:Name="CommaButton" Content=".csv" HorizontalAlignment="Left" Margin="148,62,0,0" VerticalAlignment="Top" Height="34" Width="72" Click="CommaButton_Click"/>

    </Grid>
</Window>
